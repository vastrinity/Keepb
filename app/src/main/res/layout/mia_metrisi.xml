<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"



    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"


    >

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="323dp"
        android:background="@drawable/listdays"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/colorPrimary">


        <TextView
            android:id="@+id/dateTv"
            android:layout_width="145dp"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="47dp"

            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kilaTv"
            android:layout_width="191dp"
            android:layout_height="25dp"
            android:layout_below="@+id/dateTv"
            android:layout_alignParentStart="true"

            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="9dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/liposTv"
            android:layout_width="191dp"
            android:layout_height="25dp"
            android:layout_below="@+id/kilaTv"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"

            android:textSize="10dp" />

        <TextView
            android:id="@+id/ygraTv"
            android:layout_width="191dp"
            android:layout_height="25dp"
            android:layout_below="@+id/liposTv"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"

            android:textSize="10dp" />

        <TextView
            android:id="@+id/mysTv"
            android:layout_width="191dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ygraTv"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="13dp"

            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/fatlevelTv"
            android:layout_width="191dp"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/metaTv"
            android:layout_width="191dp"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="10dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>

