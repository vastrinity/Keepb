<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".menu">


    <Button
        android:id="@+id/progressbtn"
        android:layout_width="267dp"
        android:layout_height="97dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button1"
        android:text="εξελιξη"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/tirisibtn"
        android:layout_width="267dp"
        android:layout_height="97dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:text="οι μερεσ μου"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbtn" />

    <Button
        android:id="@+id/prefsbtn"
        android:layout_width="267dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button1"
        android:text="Ρυθμισεις"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tirisibtn" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="316dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/emailbtn"
            android:layout_width="68dp"
            android:layout_height="44dp"
            android:layout_marginStart="45dp"

            android:background="@drawable/emailbtn"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prefsbtn" />

        <Button
            android:id="@+id/faceBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"


            android:layout_marginBottom="112dp"
            android:background="@drawable/facebtn"
            android:onClick="loadfacePage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/CallBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"

            android:layout_marginBottom="112dp"
            android:background="@drawable/callbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/webBtn"
            app:layout_constraintHorizontal_bias="0.824"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/webBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"

            android:layout_marginEnd="32dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/webbtn"
            android:onClick="loadWebPage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>