<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tirisi"
    android:background="@drawable/backgroundimage">

    <Button
        android:id="@+id/merabtn"
        android:layout_width="293dp"
        android:layout_height="95dp"
        android:layout_below="@+id/mRecyclerView"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:background="@drawable/button1"

        android:text="Νεα Ημέρα"
        android:textColor="@color/textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mRecyclerView"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/statbtn"
        android:layout_width="293dp"
        android:layout_height="95dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:background="@drawable/button1"
        android:text="Στατιστικα"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merabtn"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="331dp"
        android:layout_height="321dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/listframe2"
        android:foregroundGravity="center"
        android:paddingLeft="35dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/neaMetrisiBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeImeres"
        android:layout_width="68dp"
        android:layout_height="94dp"
        android:layout_below="@+id/statbtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>